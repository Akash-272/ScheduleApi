@model Frontend.Models.SeriesView

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Series Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Series ID</dt>
        <dd class="col-sm-10">@Model.SeriesID</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>
    </dl>

    <h4>Matches</h4>
    @if (Model.Matches != null && Model.Matches.Any())
    {
        <table border="1" >
            <tr>
                <td>Match ID   </td>
                <td>Match Date</td>
                <td>Venue</td>
                <td>Teams</td>
                
            </tr>
            @foreach (var match in Model.Matches)
            {
                <tr>
                    <td>@match.MatchID</td>
                    <td>@match.MatchDate</td>
                    <td>@match.Venue</td>
                    <td>@match.Team1 vs @match.Team2</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No matches found.</p>
    }
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SeriesID }) |
    <a asp-action="Index">Back to List</a>
</div>
